- if @user.errors.any?
  -@user.errors.full_messages.each do |message|
    %p.alert-error= message
= form_for(@user) do |f|
  .field
    = f.label :email
    = f.text_field :email
    %br/
  .field
    = f.label :name
    = f.text_field :name
    %br/
  .field
    = f.label :password
    = f.password_field :password
    %br/
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    %br/
  .actions
    = f.submit 'Sign Up!'